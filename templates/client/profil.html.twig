{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5>Mon Profil</h5>
                    </div>
                    <div class="card-body">
                        {% if membre %}
                            <div class="row">
                                <div class="col-md-6">
                                    <strong>Email:</strong> {{ membre.email }}
                                </div>
                                <div class="col-md-6">
                                    <strong>Nom complet:</strong> {{ membre.fullName }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-6">
                                    <strong>Téléphone:</strong> {{ membre.phone ?? 'Non renseigné' }}
                                </div>
                                <div class="col-md-6">
                                    <strong>Ville:</strong> {{ membre.city ?? 'Non renseigné' }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-12">
                                    <strong>Adresse:</strong> {{ membre.address ?? 'Non renseignée' }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-6">
                                    <strong>Date de naissance:</strong> {{ membre.birthDate ?? 'Non renseignée' }}
                                </div>
                                <div class="col-md-6">
                                    <strong>Sexe:</strong> {{ membre.gender ?? 'Non renseigné' }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-12">
                                    <strong>Membre depuis:</strong> {{ membre.createdAt ?? 'Non renseigné' }}
                                </div>
                            </div>
                        {% else %}
                            <p>Aucune information disponible</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
