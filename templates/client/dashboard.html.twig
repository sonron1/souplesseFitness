{% extends 'base.html.twig' %}

{% block title %}Mon espace client - {{ user.firstName }} {{ user.lastName }}{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row">
            <!-- Header -->
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="h3 mb-0 text-figma-dark">
                            ️ Bienvenue {{ user.firstName ?? user.email|split('@')[0] }} !
                        </h1>
                        <p class="text-muted mb-0">Votre espace membre</p>
                    </div>
                    <div>
                    <span class="badge bg-figma-orange text-white px-3 py-2">
                        <i class="bi bi-person-heart me-1"></i>Membre
                    </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistiques -->
        <div class="row g-4 mb-4">
            <div class="col-lg-3 col-md-6">
                <div class="bg-white rounded-4 shadow-sm p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-success bg-opacity-10 rounded-3 p-3 me-3">
                            <i class="bi bi-check-circle-fill text-success fs-4"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-0">Abonnement</h6>
                            <h6 class="mb-0 text-success">{% if stats.abonnement_actif %}Actif{% else %}Inactif{% endif %}</h6>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="bg-white rounded-4 shadow-sm p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 rounded-3 p-3 me-3">
                            <i class="bi bi-calendar-event text-primary fs-4"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-0">Cours réservés</h6>
                            <h3 class="mb-0">{{ stats.cours_reserves }}</h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="bg-white rounded-4 shadow-sm p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-warning bg-opacity-10 rounded-3 p-3 me-3">
                            <i class="bi bi-lightning text-warning fs-4"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-0">Séances restantes</h6>
                            <h3 class="mb-0">{{ stats.seances_restantes }}</h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="bg-white rounded-4 shadow-sm p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-figma-yellow bg-opacity-10 rounded-3 p-3 me-3">
                            <i class="bi bi-star-fill text-figma-orange fs-4"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-0">Points fidélité</h6>
                            <h3 class="mb-0">{{ stats.points_fidelite }}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions et cours -->
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="bg-white rounded-4 shadow-sm p-4">
                    <h5 class="fw-bold mb-4">
                        <i class="bi bi-lightning-charge-fill text-figma-yellow me-2"></i>
                        Actions rapides
                    </h5>
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a href="{{ path('client_reservations') }}" class="btn btn-outline-primary w-100 py-3">
                                <i class="bi bi-calendar-plus d-block mb-2 fs-4"></i>
                                Réserver
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('client_abonnements') }}" class="btn btn-outline-success w-100 py-3">
                                <i class="bi bi-card-checklist d-block mb-2 fs-4"></i>
                                Abonnements
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('client_profil') }}" class="btn btn-outline-warning w-100 py-3">
                                <i class="bi bi-person-gear d-block mb-2 fs-4"></i>
                                Mon profil
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('app_home') }}#contact" class="btn btn-outline-info w-100 py-3">
                                <i class="bi bi-chat-dots d-block mb-2 fs-4"></i>
                                Support
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="bg-white rounded-4 shadow-sm p-4">
                    <h6 class="fw-bold mb-3">Cours disponibles</h6>
                    {% if cours_disponibles|length > 0 %}
                        {% for cours in cours_disponibles %}
                            <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                                <div class="bg-figma-orange bg-opacity-20 rounded-circle p-2 me-3">
                                    <i class="bi bi-play-circle text-figma-orange"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-0">{{ cours.nom }}</h6>
                                    <small class="text-muted">{{ cours.dateHeure|date('d/m à H:i') }}</small>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-calendar-x fs-1 mb-2"></i>
                            <p class="mb-0">Aucun cours disponible</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
