<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Souplesse Fitness - Salle de sport moderne{% endblock %}</title>
    <link rel="icon" href="{{ asset('images/favicon.ico') }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{% block meta_description %}Souplesse Fitness - Votre salle de sport moderne au Bénin. Musculation, cardio, cours collectifs, coaching personnalisé. Face Clôture Iita, Cotonou.{% endblock %}">
    <meta name="keywords" content="{% block meta_keywords %}salle de sport, fitness, musculation, cardio, coaching, Cotonou, Bénin, abonnement gym, fit dance, taekwondo, boxe{% endblock %}">

    {# Open Graph pour les réseaux sociaux #}
    <meta property="og:title" content="{% block og_title %}{{ block('title') }}{% endblock %}">
    <meta property="og:description" content="{% block og_description %}{{ block('meta_description') }}{% endblock %}">
    <meta property="og:image" content="{% block og_image %}{{ absolute_url(asset('images/logo.jpg')) }}{% endblock %}">
    <meta property="og:url" content="{% block og_url %}{{ app.request.uri }}{% endblock %}">
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="Souplesse Fitness">

    {# WebpackEncoreBundle - CSS assets #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    {# CSS additionnels spécifiques à chaque page #}
    {% block extra_stylesheets %}{% endblock %}
</head>
<body class="{% block body_class %}{% endblock %}">
{# Messages flash globaux #}
{% block flash_messages %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show m-0" role="alert" style="border-radius: 0;">
                {% if label == 'success' %}
                    <i class="bi bi-check-circle me-2"></i>
                {% elseif label == 'error' or label == 'danger' %}
                    <i class="bi bi-exclamation-triangle me-2"></i>
                {% elseif label == 'warning' %}
                    <i class="bi bi-exclamation-circle me-2"></i>
                {% elseif label == 'info' %}
                    <i class="bi bi-info-circle me-2"></i>
                {% endif %}
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}

{# Navigation principale - peut être surchargée #}
{% block navigation %}
    {% if block('show_navigation') is not defined or block('show_navigation') %}
        <nav class="navbar navbar-expand-lg bg-white border-bottom shadow-sm py-2 sticky-top" style="letter-spacing:.02em;">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" href="{{ path('app_home') }}">
                    <img src="{{ asset('images/logo.jpg') }}" alt="Souplesse Fitness" class="rounded-circle border" style="height:48px;width:48px;object-fit:cover;">
                    <strong class="text-figma-dark" style="font-size:1.3rem; font-weight:700;">Souplesse Fitness</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Ouvrir le menu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 gap-2">
                        {% if app.user %}
                            {# Liens pour utilisateurs connectés #}
                            <li class="nav-item"><a class="nav-link text-figma-dark fw-medium px-3" href="{{ path('app_home') }}#abonnements">Abonnements</a></li>
                            <li class="nav-item"><a class="nav-link text-figma-dark fw-medium px-3" href="{{ path('app_home') }}#boutique">Boutique</a></li>
                        {% else %}
                            {# Liens pour visiteurs non connectés #}
                            <li class="nav-item"><a class="nav-link text-figma-dark fw-medium px-3" href="{{ path('app_home') }}#temoignages">Témoignages</a></li>
                        {% endif %}
                        <li class="nav-item"><a class="nav-link text-figma-dark fw-medium px-3" href="{{ path('app_home') }}#contact">Contact</a></li>
                    </ul>
                    <div class="ms-lg-3 mt-2 mt-lg-0 d-flex gap-2">
                        {% if app.user %}
                            {# Utilisateur connecté - Menu différent selon le rôle #}
                            <div class="dropdown">
                                <button class="btn btn-figma-yellow rounded-pill px-4 py-2 dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i>
                                    {{ app.user.firstName ?? app.user.email|split('@')[0] }}
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <span class="badge bg-danger ms-1">Admin</span>
                                    {% elseif is_granted('ROLE_COACH') %}
                                        <span class="badge bg-info ms-1">Coach</span>
                                    {% elseif is_granted('ROLE_CLIENT') %}
                                        <span class="badge bg-success ms-1">Client</span>
                                    {% endif %}
                                </button>
                                <ul class="dropdown-menu">
                                    {% if is_granted('ROLE_ADMIN') %}
                                        {# Menu Admin #}
                                        <li><a class="dropdown-item" href="{{ path('admin_dashboard') }}"><i class="bi bi-speedometer2 me-2"></i>Tableau de bord Admin</a></li>
                                        <li><a class="dropdown-item" href="{{ path('admin_users_list') }}"><i class="bi bi-people me-2"></i>Gestion Utilisateurs</a></li>
                                        <li><a class="dropdown-item" href="{{ path('admin_settings') }}"><i class="bi bi-gear me-2"></i>Paramètres</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="{{ path('app_home') }}"><i class="bi bi-house me-2"></i>Retour au site</a></li>
                                    {% elseif is_granted('ROLE_COACH') %}
                                        {# Menu Coach #}
                                        <li><a class="dropdown-item" href="{{ path('coach_dashboard') }}"><i class="bi bi-speedometer2 me-2"></i>Mon Dashboard</a></li>
                                        <li><a class="dropdown-item" href="{{ path('coach_planning') }}"><i class="bi bi-calendar me-2"></i>Mon Planning</a></li>
                                        <li><a class="dropdown-item" href="{{ path('coach_clients') }}"><i class="bi bi-people me-2"></i>Mes Clients</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="{{ path('app_home') }}"><i class="bi bi-house me-2"></i>Retour au site</a></li>
                                    {% elseif is_granted('ROLE_CLIENT') %}
                                        {# Menu Client #}
                                        <li><a class="dropdown-item" href="{{ path('client_dashboard') }}"><i class="bi bi-speedometer2 me-2"></i>Mon Dashboard</a></li>
                                        <li><a class="dropdown-item" href="{{ path('client_abonnements') }}"><i class="bi bi-card-checklist me-2"></i>Mes Abonnements</a></li>
                                        <li><a class="dropdown-item" href="{{ path('client_reservations') }}"><i class="bi bi-calendar-event me-2"></i>Réservations</a></li>
                                        <li><a class="dropdown-item" href="{{ path('client_profil') }}"><i class="bi bi-person-gear me-2"></i>Mon Profil</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="{{ path('app_home') }}"><i class="bi bi-house me-2"></i>Retour au site</a></li>
                                    {% endif %}
                                    <li><a class="dropdown-item text-danger" href="{{ path('app_logout') }}"><i class="bi bi-box-arrow-right me-2"></i>Déconnexion</a></li>
                                </ul>
                            </div>
                        {% else %}
                            {# Visiteur non connecté #}
                            <a href="{{ path('app_login') }}" class="btn btn-outline-dark rounded-pill px-4 py-2">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Se connecter
                            </a>
                            <a href="{{ path('app_register') }}" class="btn btn-figma-yellow rounded-pill px-4 py-2">
                                <i class="bi bi-person-plus me-1"></i>S'inscrire
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </nav>
    {% endif %}
{% endblock %}

{# Contenu principal #}
<main>
    {% block body %}{% endblock %}
</main>

