{% endblock %}

{# WebpackEncoreBundle - JS assets #}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{# JavaScript additionnel spécifique à chaque page #}
{% block extra_javascripts %}{% endblock %}

<!-- Bouton de retour en haut -->
<button id="backToTop" class="btn btn-figma-yellow rounded-circle position-fixed shadow" style="bottom: 20px; right: 20px; z-index: 1000; display: none; width: 50px; height: 50px;">
    <i class="bi bi-arrow-up"></i>
</button>

<script>
    // Script pour le bouton "Retour en haut"
    document.addEventListener('DOMContentLoaded', function() {
        const backToTopButton = document.getElementById('backToTop');

        // Afficher/masquer le bouton selon le scroll
        window.addEventListener('scroll', function() {
            if (window.scrollY > 300) {
                backToTopButton.style.display = 'block';
            } else {
                backToTopButton.style.display = 'none';
            }
        });

        // Action de retour en haut
        backToTopButton.addEventListener('click', function() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
    });
</script>
</body>
</html>
