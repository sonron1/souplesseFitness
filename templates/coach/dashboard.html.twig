
{% extends 'base.html.twig' %}

{% block title %}Dashboard Coach - {{ coach.firstName }} {{ coach.lastName }}{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row">
            <!-- Header -->
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
