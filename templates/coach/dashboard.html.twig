                        </h1>
                        <p class="text-muted mb-0">Tableau de bord coach</p>
                    </div>
                    <div>
                    <span class="badge bg-figma-yellow text-dark px-3 py-2">
                        <i class="bi bi-person-badge me-1"></i>Coach
                    </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistiques -->
        <div class="row g-4 mb-4">
            <div class="col-lg-3 col-md-6">
                <div class="bg-white rounded-4 shadow-sm p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 rounded-3 p-3 me-3">
                            <i class="bi bi-people-fill text-primary fs-4"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-0">Mes clients</h6>
                            <h3 class="mb-0">{{ stats.mes_clients }}</h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="bg-white rounded-4 shadow-sm p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-success bg-opacity-10 rounded-3 p-3 me-3">
                            <i class="bi bi-calendar-check text-success fs-4"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-0">Cours aujourd'hui</h6>
                            <h3 class="mb-0">{{ stats.cours_aujourdhui }}</h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="bg-white rounded-4 shadow-sm p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-warning bg-opacity-10 rounded-3 p-3 me-3">
                            <i class="bi bi-clock text-warning fs-4"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-0">S√©ances pr√©vues</h6>
                            <h3 class="mb-0">{{ stats.seances_prevues }}</h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="bg-white rounded-4 shadow-sm p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-info bg-opacity-10 rounded-3 p-3 me-3">
                            <i class="bi bi-check-circle text-info fs-4"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-0">S√©ances complet√©es</h6>
                            <h3 class="mb-0">{{ stats.seances_completees }}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions rapides -->
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="bg-white rounded-4 shadow-sm p-4">
                    <h5 class="fw-bold mb-4">
                        <i class="bi bi-lightning-charge-fill text-figma-yellow me-2"></i>
                        Actions rapides
                    </h5>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <a href="{{ path('coach_planning') }}" class="btn btn-outline-primary w-100 py-3">
                                <i class="bi bi-calendar3 d-block mb-2 fs-4"></i>
                                Mon planning
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="{{ path('coach_clients') }}" class="btn btn-outline-success w-100 py-3">
                                <i class="bi bi-people d-block mb-2 fs-4"></i>
                                Mes clients
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="#" class="btn btn-outline-warning w-100 py-3">
                                <i class="bi bi-plus-circle d-block mb-2 fs-4"></i>
                                Nouvelle s√©ance
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="bg-white rounded-4 shadow-sm p-4">
                    <h6 class="fw-bold mb-3">Prochaines s√©ances</h6>
                    {% if prochaines_seances|length > 0 %}
                        {% for seance in prochaines_seances %}
                            <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                                <div class="bg-figma-yellow bg-opacity-20 rounded-circle p-2 me-3">
                                    <i class="bi bi-clock text-figma-dark"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-0">{{ seance.dateHeure|date('H:i') }}</h6>
                                    <small class="text-muted">{{ seance.dateHeure|date('d/m/Y') }}</small>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <p class="text-muted text-center">Aucune s√©ance pr√©vue</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
