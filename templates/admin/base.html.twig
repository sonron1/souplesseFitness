<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Administration{% endblock %} - Souplesse Fitness</title>

    <!-- CSS -->
    {# WebpackEncoreBundle - CSS assets #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    {# CSS additionnels spécifiques à chaque page #}
    {% block extra_stylesheets %}{% endblock %}

    <link rel="stylesheet" href="{{ asset('styles/admin.css') }}">
</head>
<body class="admin-body">
<!-- Sidebar -->
<nav class="sidebar">
    <div class="sidebar-header">
        <h4><i class="bi bi-shield-check text-warning me-2"></i>Admin Panel</h4>
        <small class="text-muted">Souplesse Fitness</small>
    </div>

    <ul class="sidebar-nav">
        <li>
            <a href="{{ path('admin_dashboard') }}" class="sidebar-link {% if app.request.get('_route') == 'admin_dashboard' %}active{% endif %}">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
        </li>
        <li>
            <a href="{{ path('admin_users_list') }}" class="sidebar-link {% if app.request.get('_route') starts with 'admin_user' %}active{% endif %}">
                <i class="bi bi-people"></i> Utilisateurs
            </a>
        </li>
        <li>
            <a href="#" class="sidebar-link">
                <i class="bi bi-person-badge"></i> Coachs
            </a>
        </li>
        <li>
            <a href="#" class="sidebar-link">
                <i class="bi bi-person-heart"></i> Clients
            </a>
        </li>
        <li>
            <a href="#" class="sidebar-link">
                <i class="bi bi-calendar-event"></i> Cours
            </a>
        </li>
        <li>
            <a href="#" class="sidebar-link">
                <i class="bi bi-box"></i> Produits
            </a>
        </li>
        <li>
            <a href="#" class="sidebar-link">
                <i class="bi bi-cash-stack"></i> Abonnements
            </a>
        </li>
        <li>
            <a href="{{ path('admin_settings') }}" class="sidebar-link {% if app.request.get('_route') == 'admin_settings' %}active{% endif %}">
                <i class="bi bi-gear"></i> Paramètres
            </a>
        </li>
    </ul>

    <div class="sidebar-footer">
        <div class="user-info">
            <small class="text-muted">Connecté en tant que</small>
            <div class="fw-bold">{{ app.user.fullName }}</div>
        </div>
        <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-light">
            <i class="bi bi-box-arrow-right"></i> Déconnexion
        </a>
    </div>
</nav>

<!-- Main Content -->
<main class="main-content">
    <!-- Top Bar -->
    <header class="topbar">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 mb-0">{% block page_title %}Administration{% endblock %}</h1>
                <small class="text-muted">{% block page_subtitle %}{% endblock %}</small>
            </div>
            <div class="d-flex align-items-center gap-3">
                <span class="badge bg-success">En ligne</span>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle"></i> {{ app.user.fullName }}
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Profil</a></li>
                        <li><a class="dropdown-item" href="{{ path('admin_dashboard') }}"><i class="bi bi-house me-2"></i>Voir le site</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="{{ path('app_logout') }}"><i class="bi bi-box-arrow-right me-2"></i>Déconnexion</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <!-- Content -->
    <div class="content">
        <!-- Flash Messages -->
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                    <strong>
                        {% if type == 'success' %}<i class="bi bi-check-circle me-2"></i>{% endif %}
                        {% if type == 'error' %}<i class="bi bi-exclamation-triangle me-2"></i>{% endif %}
                        {% if type == 'warning' %}<i class="bi bi-exclamation-triangle me-2"></i>{% endif %}
                        {% if type == 'info' %}<i class="bi bi-info-circle me-2"></i>{% endif %}
                    </strong>
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </div>
</main>

<!-- Scripts -->

{# WebpackEncoreBundle - JS assets #}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{# JavaScript additionnel spécifique à chaque page #}
{% block extra_javascripts %}{% endblock %}

<!-- Bouton de retour en haut -->
<button id="backToTop" class="btn btn-figma-yellow rounded-circle position-fixed shadow" style="bottom: 20px; right: 20px; z-index: 1000; display: none; width: 50px; height: 50px;">
    <i class="bi bi-arrow-up"></i>
</button>

<script>
    // Script pour le bouton "Retour en haut"
    document.addEventListener('DOMContentLoaded', function() {
        const backToTopButton = document.getElementById('backToTop');

        // Afficher/masquer le bouton selon le scroll
        window.addEventListener('scroll', function() {
            if (window.scrollY > 300) {
                backToTopButton.style.display = 'block';
            } else {
                backToTopButton.style.display = 'none';
            }
        });

        // Action de retour en haut
        backToTopButton.addEventListener('click', function() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
    });
</script>
</body>
</html>
