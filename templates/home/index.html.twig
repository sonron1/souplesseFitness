
{% extends 'base.html.twig' %}
{% block title %}Souplesse Fitness - Salle de sport moderne à votre rythme{% endblock %}

{% block body %}
    <!-- HERO -->
    <header>
        <div class="bg-figma-dark position-relative overflow-hidden" style="height: 400px; max-height: 55vw;">
            <img src=" {{ asset('images/banner.jpg') }}" alt="Salle de sport" class="w-100 h-100 object-fit-cover" loading="eager" style="opacity:0.68; object-fit: cover;">
            <div class="position-absolute top-0 start-0 w-100 h-100 bg-figma-dark" style="opacity:0.66;"></div>
            <div class="container position-absolute top-0 start-0 w-100 h-100 d-flex flex-column justify-content-center align-items-center text-center z-1">
                <h1 class="display-3 fw-bold text-figma-yellow mb-3 text-shadow animate__animated animate__fadeInDown">
                    Atteignez votre <span class="text-white">meilleure forme</span>
                </h1>
                <p class="lead text-light mb-4 animate__animated animate__fadeIn animate__delay-1s">
                    Espace, coaching, liberté — entraînez-vous selon vos envies&nbsp;!
                </p>
                {% if app.user %}
                    <a href="#abonnements" class="btn btn-figma-yellow btn-lg rounded-pill shadow px-5 fw-bold animate__animated animate__pulse animate__delay-2s animate__infinite">
                        Découvrir nos abonnements
                    </a>
                {% else %}
                    <a href="{{ path('app_register') }}" class="btn btn-figma-yellow btn-lg rounded-pill shadow px-5 fw-bold animate__animated animate__pulse animate__delay-2s animate__infinite">
                        Rejoignez-nous maintenant
                    </a>
                {% endif %}
                <div class="mt-3">
                    <a href="#contact" class="link-light text-decoration-underline small">Demandez une séance d'essai gratuite <i class="bi bi-arrow-right-circle"></i></a>
                </div>
            </div>
        </div>
    </header>

    <main>
        <!-- Présentation -->
        <section class="bg-white section-space animate-on-scroll" data-animate="fadeInLeft">
            <div class="container">
                <div class="row align-items-center g-5">
                    <div class="col-md-6">
                        <img src="{{ asset('images/pexelsvictorfreitas.jpg') }}" alt="Salle de sport musculation"
                             class="w-100 rounded-4 shadow object-fit-cover animate-on-scroll"
                             style="max-height:340px; object-fit: cover;"
                             data-animate="zoomIn"/>
                    </div>
                    <div class="col-md-6 px-md-5">
                        <h2 class="fw-bold mb-4 text-figma-yellow display-6 animate-on-scroll" data-animate="fadeInUp">Votre gym, votre tempo</h2>
                        <p class="mb-4 text-figma-dark fw-normal animate-on-scroll" data-animate="fadeIn" style="font-size:1.12rem;">
                            Cardio, musculation, cours collectifs, conseils&nbsp;: vivez une expérience sportive humaine et flexible. Accès 7j/7, équipe professionnelle et ambiance chaleureuse.
                        </p>
                        <ul class="list-unstyled mb-4">
                            <li class="mb-2 d-flex align-items-center animate-on-scroll" data-animate="fadeInRight"><i class="bi bi-patch-check-fill text-success me-2"></i> Coachs diplômés et motivants</li>
                            <li class="mb-2 d-flex align-items-center animate-on-scroll" data-animate="fadeInRight"><i class="bi bi-calendar2-check-fill text-success me-2"></i> Réservation des cours en ligne</li>
                            <li class="mb-2 d-flex align-items-center animate-on-scroll" data-animate="fadeInRight"><i class="bi bi-emoji-smile-fill text-success me-2"></i> Ambiance conviviale, zéro intimidation</li>
                            <li class="mb-2 d-flex align-items-center animate-on-scroll" data-animate="fadeInRight"><i class="bi bi-bag-heart-fill text-success me-2"></i> Boutique fitness & boissons</li>
                        </ul>
                        {% if app.user %}
                            <a href="#abonnements" class="btn btn-figma-outline-dark rounded-pill px-5 py-2 animate-on-scroll" data-animate="fadeInUp">Voir nos abonnements</a>
                        {% else %}
                            <a href="#contact" class="btn btn-figma-outline-dark rounded-pill px-5 py-2 animate-on-scroll" data-animate="fadeInUp">Nous contacter</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </section>

        {% if app.user %}
            <!-- SECTION ABONNEMENTS - UNIQUEMENT POUR LES UTILISATEURS CONNECTÉS -->
            <section id="abonnements" class="section-space bg-light">
                <div class="container">
                    <h2 class="fw-bolder text-center mb-5 text-figma-dark display-5 animate-on-scroll" data-animate="fadeInDown">
                        <i class="bi bi-star-fill text-figma-yellow me-2"></i>
                        Nos abonnements exclusifs
                    </h2>

                    <div class="row g-4">
                        {% for abonnement in abonnements %}
                            <div class="col-lg-4 col-md-6">
                                <div class="card h-100 border-0 shadow-sm rounded-4 position-relative animate-on-scroll" data-animate="zoomIn"
                                     style="{% if abonnement.nom == 'Abonnement Forme' %}border: 3px solid #ffc107 !important;{% endif %}">

                                    {% if abonnement.nom == 'Abonnement Forme' %}
                                        <div class="position-absolute top-0 start-50 translate-middle">
                                            <span class="badge bg-warning text-dark px-3 py-2 rounded-pill fw-bold">
                                                <i class="bi bi-star-fill me-1"></i>POPULAIRE
                                            </span>
                                        </div>
                                    {% endif %}

                                    <div class="card-header bg-transparent border-0 text-center pt-4">
                                        <h3 class="fw-bold text-figma-dark mb-2">{{ abonnement.nom }}</h3>
                                        <div class="price-display mb-2">
                                            <span class="display-4 fw-bold text-figma-orange">{{ abonnement.prix }}€</span>
                                            <span class="text-muted fs-5">
                                                /{% if abonnement.type == 'mensuel' %}mois{% else %}an{% endif %}
                                            </span>
                                        </div>
                                        {% if abonnement.type == 'annuel' %}
                                            <small class="text-success fw-bold">
                                                <i class="bi bi-piggy-bank me-1"></i>Économisez 2 mois !
                                            </small>
                                        {% endif %}
                                    </div>

                                    <div class="card-body d-flex flex-column p-4">
                                        <p class="text-muted mb-4">{{ abonnement.description }}</p>

                                        <div class="features-list flex-grow-1 mb-4">
                                            {% set avantages = {
                                                'Abonnement Découverte': [
                                                    'Accès libre 7j/7 de 6h à 22h',
                                                    'Cours collectifs inclus',
                                                    'Vestiaires et douches',
                                                    'Programme d\'entraînement personnalisé',
                                                    'Suivi des progrès en ligne'
                                                ],
                                                'Abonnement Forme': [
                                                    'Tous les avantages Découverte',
                                                    '2 séances de coaching personnalisé/mois',
                                                    'Accès aux cours premium (Yoga, Pilates)',
                                                    'Espace détente et sauna',
                                                    'Nutrition coaching inclus',
                                                    'Application mobile premium'
                                                ],
                                                'Abonnement Premium': [
                                                    'Tous les avantages Forme',
                                                    'Coaching personnalisé illimité',
                                                    'Accès prioritaire aux équipements',
                                                    'Vestiaire VIP privé',
                                                    'Massages thérapeutiques (2/mois)',
                                                    'Plan nutrition sur-mesure',
                                                    'Invitations aux événements exclusifs'
                                                ],
                                                'Abonnement Étudiant': [
                                                    'Accès libre en semaine 8h-17h',
                                                    'Cours collectifs de base',
                                                    'Vestiaires et douches',
                                                    'Support en ligne',
                                                    'Réductions sur les services'
                                                ],
                                                'Abonnement Annuel': [
                                                    'Équivalent Forme pour 12 mois',
                                                    '2 mois offerts (10 mois payés)',
                                                    '4 séances coaching personnalisé/mois',
                                                    'Accès invité (2 fois/mois)',
                                                    'Garantie satisfaction 30 jours',
                                                    'Gel d\'abonnement (1 mois/an)'
                                                ],
                                                'Abonnement Famille': [
                                                    'Accès pour 4 personnes maximum',
                                                    'Tous les cours collectifs inclus',
                                                    'Cours enfants/ados spécialisés',
                                                    'Vestiaires familiaux',
                                                    'Activités famille mensuelles',
                                                    'Réductions boutique et café'
                                                ]
                                            } %}

                                            {% for avantage in avantages[abonnement.nom] %}
                                                <div class="d-flex align-items-start mb-2">
                                                    <i class="bi bi-check-circle-fill text-success me-2 mt-1 flex-shrink-0"></i>
                                                    <small class="text-figma-dark">{{ avantage }}</small>
                                                </div>
                                            {% endfor %}
                                        </div>

                                        <div class="mt-auto">
                                            <button class="btn {% if abonnement.nom == 'Abonnement Forme' %}btn-warning{% else %}btn-figma-orange{% endif %} w-100 rounded-pill py-3 fw-bold mb-2">
                                                <i class="bi bi-credit-card me-2"></i>
                                                Choisir cet abonnement
                                            </button>
                                            <small class="d-block text-center text-muted">
                                                <i class="bi bi-shield-check me-1"></i>
                                                Sans engagement • Résiliation facile
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <!-- Garanties et sécurité -->
                    <div class="row mt-5">
                        <div class="col-12">
                            <div class="bg-white p-4 rounded-4 shadow-sm">
                                <div class="row text-center">
                                    <div class="col-md-3 mb-3">
                                        <i class="bi bi-shield-check display-6 text-success mb-2"></i>
                                        <h6 class="fw-bold text-figma-dark">Paiement sécurisé</h6>
                                        <small class="text-muted">SSL et encryption bancaire</small>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <i class="bi bi-arrow-clockwise display-6 text-info mb-2"></i>
                                        <h6 class="fw-bold text-figma-dark">Sans engagement</h6>
                                        <small class="text-muted">Résiliez quand vous voulez</small>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <i class="bi bi-headset display-6 text-warning mb-2"></i>
                                        <h6 class="fw-bold text-figma-dark">Support 24/7</h6>
                                        <small class="text-muted">Équipe dédiée à votre service</small>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <i class="bi bi-heart-fill display-6 text-danger mb-2"></i>
                                        <h6 class="fw-bold text-figma-dark">Satisfaction garantie</h6>
                                        <small class="text-muted">30 jours satisfait ou remboursé</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <span class="badge bg-figma-yellow text-figma-dark px-3 py-2 shadow-sm">
                            Offre découverte&nbsp;: <strong>Essai gratuit sur demande&nbsp;!</strong> <a href="#contact" class="text-figma-dark text-decoration-underline ms-2">En profiter</a>
                        </span>
                    </div>
                </div>
            </section>
        {% else %}
            <!-- SECTION CALL-TO-ACTION POUR LES VISITEURS NON CONNECTÉS -->
            <section class="section-space bg-light">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8 text-center">
                            <div class="bg-white rounded-4 shadow-sm p-5 animate-on-scroll" data-animate="zoomIn">
                                <i class="bi bi-lock-fill display-4 text-figma-yellow mb-4"></i>
                                <h2 class="fw-bold text-figma-dark mb-3 display-6">
                                    Découvrez nos abonnements exclusifs
                                </h2>
                                <p class="lead text-muted mb-4">
                                    Créez votre compte gratuit pour accéder à nos formules d'abonnement
                                    et découvrir tous nos services premium.
                                </p>
                                <div class="d-flex flex-column flex-md-row gap-3 justify-content-center">
                                    <a href="{{ path('app_register') }}" class="btn btn-figma-orange btn-lg rounded-pill px-5 py-3 fw-bold">
                                        <i class="bi bi-person-plus me-2"></i>Créer un compte gratuit
                                    </a>
                                    <a href="{{ path('app_login') }}" class="btn btn-outline-secondary btn-lg rounded-pill px-5 py-3">
                                        <i class="bi bi-box-arrow-in-right me-2"></i>Se connecter
                                    </a>
                                </div>
                                <div class="mt-4 d-flex justify-content-center flex-wrap gap-4">
                                    <div class="text-center">
                                        <i class="bi bi-lightning-charge-fill text-figma-orange fs-3"></i>
                                        <p class="small text-muted mb-0">Accès immédiat</p>
                                    </div>
                                    <div class="text-center">
                                        <i class="bi bi-shield-check-fill text-success fs-3"></i>
                                        <p class="small text-muted mb-0">100% gratuit</p>
                                    </div>
                                    <div class="text-center">
                                        <i class="bi bi-heart-fill text-danger fs-3"></i>
                                        <p class="small text-muted mb-0">Sans engagement</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        {% endif %}

        <!-- Boutique -->
        <section id="boutique" class="section-space animate-on-scroll" data-animate="fadeInRight" style="background: linear-gradient(90deg, #fff 65%, #FFF8E0 100%);">
            <div class="container">
                <div class="row align-items-center g-5">
                    <div class="col-md-6 order-md-2 animate-on-scroll" data-animate="zoomIn">
                        <img src="{{ asset('images/pexels-mastercowley.jpg') }}" alt="Boutique Fitness" class="w-100 rounded-4 shadow object-fit-cover" style="max-height:260px; object-fit: cover;">
                    </div>
                    <div class="col-md-6 order-md-1 px-md-5">
                        <h2 class="fw-bold text-figma-yellow mb-3 display-6 animate-on-scroll" data-animate="fadeInUp">Boutique sur place</h2>
                        <p class="mb-4 text-figma-dark animate-on-scroll" data-animate="fadeIn" style="font-size:1.08rem;">
                            Complétez vos efforts avec nos accessoires et boissons exclusives, réservés à nos membres.
                        </p>
                        <a href="#contact" class="btn btn-figma-outline-dark px-5 py-2 rounded-pill animate-on-scroll" data-animate="fadeInUp">Demander un catalogue</a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Témoignages -->
        <section id="temoignages" class="bg-light section-space">
            <div class="container">
                <h2 class="fw-bolder text-center mb-4 text-figma-dark display-5 animate-on-scroll" data-animate="fadeInDown">Ils parlent de nous</h2>
                <div class="row g-4 justify-content-center">
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm h-100 bg-white text-center p-4 animate-on-scroll" data-animate="zoomIn" style="border-radius: 1.4rem;">
                            <img src="{{ asset('images/edgar-chaparro.jpg') }}" alt="avis client" class="rounded-circle mx-auto mb-3 border border-3 border-figma-yellow" style="width: 74px; height: 74px; object-fit: cover;">
                            <blockquote class="blockquote mb-0">
                                <p class="fst-italic text-figma-dark">«Salle très conviviale et équipements au top. Les coachs sont à l'écoute ! »</p>
                                <footer class="blockquote-footer text-figma-dark">Laura B.</footer>
                            </blockquote>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm h-100 bg-white text-center p-4 animate-on-scroll" data-animate="zoomIn" style="border-radius: 1.4rem;">
                            <img src="{{ asset('images/madison-lavern.jpg') }}" alt="avis client" class="rounded-circle mx-auto mb-3 border border-3 border-figma-yellow" style="width: 74px; height: 74px; object-fit: cover;">
                            <blockquote class="blockquote mb-0">
                                <p class="fst-italic text-figma-dark">«J'ai enfin trouvé une salle où je me sens bien. Bonne ambiance, propre et beaucoup de matériel ! »</p>
                                <footer class="blockquote-footer text-figma-dark">Thomas D.</footer>
                            </blockquote>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm h-100 bg-white text-center p-4 animate-on-scroll" data-animate="zoomIn" style="border-radius: 1.4rem;">
                            <img src="{{ asset('images/pexels-nappy.jpg') }}" alt="avis client" class="rounded-circle mx-auto mb-3 border border-3 border-figma-yellow" style="width: 74px; height: 74px; object-fit: cover;">
                            <blockquote class="blockquote mb-0">
                                <p class="fst-italic text-figma-dark">«Les programmes sont adaptés et l'accueil, au top. Je recommande à tous les niveaux. »</p>
                                <footer class="blockquote-footer text-figma-dark">Sarah K.</footer>
                            </blockquote>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- FAQ courte -->
        <section class="section-space bg-white">
            <div class="container">
                <h2 class="fw-bold text-center text-figma-dark mb-4">Questions fréquentes</h2>
                <div class="accordion" id="faqAccordion">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="q1">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse1" aria-expanded="false" aria-controls="collapse1">
                                Peut-on visiter la salle avant de s'inscrire?
                            </button>
                        </h2>
                        <div id="collapse1" class="accordion-collapse collapse" aria-labelledby="q1" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Oui, contactez-nous pour programmer une visite ou bénéficier de notre séance d'essai gratuite.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="q2">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse2" aria-expanded="false" aria-controls="collapse2">
                                Les abonnements incluent-ils un coaching personnalisé?
                            </button>
                        </h2>
                        <div id="collapse2" class="accordion-collapse collapse" aria-labelledby="q2" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Certains abonnements incluent un coaching personnalisé et tous permettent un suivi sur demande.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Contact -->
        <section id="contact" class="section-space bg-figma-yellow">
            <div class="container">
                <h2 class="fw-bolder text-center text-figma-dark mb-4 mb-md-5 display-6">Contactez-nous</h2>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success text-center">{{ message }}</div>
                {% endfor %}
                <div class="row justify-content-center">
                    <div class="col-md-7 col-lg-6">
                        {{ form_start(form, {
                            attr: {
                                class: 'bg-white rounded-4 shadow p-4 px-md-5'
                            }
                        }) }}
                        <div class="mb-3">
                            {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'required': 'required', 'autocomplete': 'name'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.email, 'E-mail', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'type': 'email', 'required': 'required', 'autocomplete': 'email'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.message, 'Votre message', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': '3', 'required': 'required'}}) }}
                            {{ form_errors(form.message) }}
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-figma-dark rounded-pill py-2 fw-bold">
                                Envoyer <i class="bi bi-send ms-1"></i>
                            </button>
                        </div>
                        <div class="mt-3 small text-center text-secondary">
                            Ou
                            <a href="https://wa.me/1234567890" target="_blank" class="text-success text-decoration-underline">
                                <i class="bi bi-whatsapp"></i> WhatsApp
                            </a>
                        </div>
                        {{ form_end(form) }}
                        <div class="mt-4 text-center text-figma-dark fw-medium">
                            <i class="bi bi-geo-alt-fill"></i> 123 rue Fitness, 75000 Paris &nbsp;•&nbsp;
                            <i class="bi bi-telephone"></i> 01 23 45 67 89
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Carte Google Maps -->
        <section class="section-space py-0 pb-5 bg-white">
            <div class="container">
                <h3 class="fw-bold text-figma-dark mb-3 text-center animate-on-scroll" data-animate="fadeInDown">
                    <i class="bi bi-geo-alt"></i> Nous retrouver
                </h3>
                <div class="shadow rounded-4 overflow-hidden animate-on-scroll" data-animate="zoomIn">
                    <iframe
                        src="https://www.google.com/maps?q=123+rue+Fitness,+75000+Paris&output=embed"
                        width="100%"
                        height="320"
                        frameborder="0"
                        style="border:0; min-width:220px;"
                        allowfullscreen
                        aria-hidden="false"
                        tabindex="0"
                        title="Carte Souplesse Fitness"
                    ></iframe>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="border-top py-4 bg-light mt-5">
        <div class="container text-center text-figma-dark small">
            <div class="mb-3">
                <a href="#contact" class="btn btn-figma-yellow btn-sm rounded-pill shadow-sm fw-bold px-4" style="letter-spacing:0.5px;">
                    <i class="bi bi-arrow-right-circle me-1"></i> Demander une séance d'essai offerte
                </a>
            </div>
            &copy; {{ "now"|date("Y") }} Souplesse Fitness. Tous droits réservés.
        </div>
    </footer>
{% endblock %}
